{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules"]
}